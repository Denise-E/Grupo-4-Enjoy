<%- include('../partials/head') %> 
<link rel="stylesheet" href="/css/categories/<%=style%>.css">

<body>
    <%- include('../partials/header') %> 
    
    <main>
     <section>
        <h1>NUESTRAS EXPERIENCIAS</h1>
    </section>
    <section class=lista>
            <% products.forEach(element => { %>
                <ul class= "listadoProductos">
                    <a href="/products/<%= element.id %>">
                        <li class= "imagenDescripcion">
                            <picture class= "imagenProducto">
                                <img src= "/uploads/<%= element.File.url %>" class="imagenProducto">
                            </picture>
                            <h2 class= "tituloImagen"> <%= element.name %> </h2>
                            <p> <%= element.description %> </p>
                            <p class= "personaPrecio"> Para <%= element.persons %> personas | $ <%= element.price %> </p>
                            
                            
                        </li>
                    </a>
                </ul>
            <% }) %>
        </section>
    </main>
    
    <%- include('../partials/footer') %> 

</body>
</html>