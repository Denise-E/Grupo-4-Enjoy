                    </form>
                    </fieldset>
                      <h3>Mensaje</h3>
                      <div>
                          <select type="select">
                              <option value class="">Asunto</option>
                              <option>Comprar un regalo</option>
                              <option>Estado de mi envío</option>
                              <option>Abrir mi regalo</option>
                              <option>Cambio</option>
                              <option>Extension de regalo</option>
                              <option>Reserva</option>
                              <option>Perdi mi regalo</option>
                              <option>Devolver mi compra</option>
                              <option>Otro</option>
                          </select>
                      </div>
                      <button class="enviar" type="submit"><a href="/">Enviar</a></button>
                   </form>
             </div>
        </section>
        </main>

    <%- include('../partials/footer') %> 
</body>
</html>