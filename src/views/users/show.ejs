<%- include("../partials/head")  %> 

<body class="body">
    <%- include("../partials/header")  %>

    <main>
    <article>
        <div class="div">
        <h2 class="nombres"><%= user.firstName %> <%= user.lastName %> </h2>
        <p class="email" id="paragrah"><%= user.email %> </p>
        <% if (user.File != null) { %>
            <picture class= "imagenUsuario"></picture>
                <img class= foto src= "/uploads/<%=user.File.url %>">
            </picture>
            <% } else { %> 
             <picture class= "imagenUsuario"></picture>
             <img class= foto src= "/uploads/default.png">
         </picture>
         <% } %>
        
      <% if (user.isAdmin == true) { %>
       <p id="paragrah"> este usuario es administrador</p>
      <% } %>  

      <% if (user.isActive == true) { %>
        <p class="actividad" id="paragrah"> este usuario esta activo </p>
       <% } %> 
    
    <p class="datos" id="paragrah">Actualizá tus datos:</p>
    <section class="iconos">
    <a href="/users/editarusuario/<%= user.id %>"><i class="fas fa-pen"></i></a>

    <script>
        // Confirmacion eliminación ususarios
        function confirmDelete() {
          let confirmDelete = confirm("Seguro que quiere eliminar este usuario ?");
          if (confirmDelete) {
            alert("Usuario eliminado");
          } else {
            event.preventDefault();
          }
        }
    </script>

    <form action="/users/delete/?m=DELETE" method="post" >
        <input type="hidden" name="id" value="<%= user.id %>">
        <button type="submit" class="deleteButton" onclick="confirmDelete()"><i class="fas fa-trash"></i></button>
    </section>
    </form>
    </div>

   </article>
</main>

    <%- include("../partials/footer")  %>

</body>
</html>