
<%- include("../partials/head")  %> 
<body>
    <%- include("../partials/header")  %>

    <main>
    <article>
        <h1><%= user.firstName %> <%= user.lastName %> </h1>
        <p><%= user.email %> </p>
        <p> <%= user.image %> </p>
        
      <% if (user.isAdmin == true) { %>
       <p>este usuario es administrador</p>
      <% } %>  

      <% if (user.isActive == true) { %>
        <p>este usuario esta activo</p>
       <% } %> 
    </article>

    <form action="/users/?m=DELETE" method="post">
        <input type="hidden" name="id" value="<%= user.id %>">
        <button type="submit" class="deleteButton"><i class="fas fa-trash"></i></button>
        <a href="/favoritos"> <i class="fas fa-heart"></i> </a>
    </form>

</main>

    <%- include("../partials/footer")  %>

</body>
</html>