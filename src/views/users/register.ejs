
<%- include("../partials/head")  %> 
<body>
    <%- include("../partials/header")  %>

    <main>
        <section id="main">
           <section class="registro">
            <form action="/users/" method="post" enctype="multipart/form-data"  class="formularioRegistro">      
                <fieldset class="formreg">
                    <h1 class="crearCuenta">Crear cuenta</h1> 
                    <label for>Nombre :</label>
                    <input type="text" name="firstName" minlength="3" required>
                    <span class="feedback"></span>
                    <% if (locals.errors && errors.name) { %>
                        <p><%= errors.name.msg %> </p>
                      <% } %>
                    <label for>Apellido :</label>
                    <input type="text" name="lastName" minlength="3" id required>
                    <% if (locals.errors && errors.name) { %>
                        <p><%= errors.name.msg %> </p>
                      <% } %>
                    <label for>Correo electronico :</label>
                    <input type="email" name="email" id required>
                    <% if (locals.errors && errors.email) { %>
                        <p><%= errors.email.msg %> </p>
                      <% } %>
                    <label for>Contraseña :</label>
                    <input type="password" name="password" minlength="8" placeholder="*****" required>
                    <% if (locals.errors && errors.password) { %>
                        <p><%= errors.password.msg %> </p>
                      <% } %>
                    <label for="">Foto de usuario :</label> 
                    <input type="file" id="file" name="image">
                </fieldset>
                <div class="ultimaSeccionMain">
                <label for="terminos y condiciones" class="terms"><input type="checkbox" name="te condiciones" value="terminos y condiciones" required> He leido y acepto los terminos y condiciones del sitio </label>
                <button type="submit">Registrarme</button> 
            </div>
            </form>
            </section>
            

        </section>
        <section> 
            <p>¿Ya tenés una cuenta? </p>
            <button type="submit">
                <a href="/users/login">Iniciá Sesion</a>
            </button>
        </section> 
    </main>
    <%- include('../partials/footer') %> 
    
</body>
</html>